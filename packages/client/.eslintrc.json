{
	"env": {
			"browser": true,
			"es2021": true
	},
	"extends": [
			"plugin:react/recommended",
			"airbnb",
			"plugin:react-hooks/recommended",
			"plugin:unicorn/recommended",
			"plugin:markdown/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
			"ecmaFeatures": {
					"jsx": true
			},
			"ecmaVersion": 12,
			"sourceType": "module"
	},
	"plugins": [
			"react",
			"jest",
			"@typescript-eslint",
			"eslint-plugin-tsdoc"
	],
	"rules": {
		"tsdoc/syntax": "warn",
		"semi": [2, "never"],
		"arrow-parens": [1, "as-needed"],
		"unicorn/filename-case": [
			"error", {
				"case": "camelCase"
			}
		]
	}
}
